<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Exam Application System</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f5f5f5;
    }
    .content {
      margin-left: 200px;
      padding: 40px;
      display: flex;
      gap: 20px;
      margin-top: -360px;; 
    }

    .box {
      background-color: white;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      flex: 1;
    }

    .course-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 15px;
}

.course-action form {
  margin: 0;
}


    /* Form Styling */
    .add-course-form input[type="text"] {
      width: 80%;
      padding: 10px;
      margin: 10px 0 10px 0;
      margin-right: 5px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }

    .add-course-form button {
      background-color: #ffc107;
      color: black;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
    }
  </style>
</head>
<body>
    <%- include("dashboard.ejs") %>
    <div class="content">
      <div class="box">
  <h2>Existing Courses</h2>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Course</th>     <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% subjects.forEach(course => { %>
        <tr>
          <td><%= course.cid %></td>
          <td class="course-action">
            <span><%= course.cname %></span>
            <form action="/deletecourse/<%= course.cid %>" method="GET" style="display: inline;">
              <input type="hidden" name="cid" value="<%= course.cid %>"><th>
              <input type="hidden" name="cname" value="<%= course.cname %>">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

      <div class="box add-course-form">
        <h2 style="color: #dc3545;">Add New Course</h2>
        <form method="POST" action="/addcourse">
          <label>Course Name</label>
          <input type="text" name="cname" placeholder="Enter course name" required />
          <button type="submit">Add Course</button>
        </form>
      </div>
    </div>
  </div>

</body>
</html>
